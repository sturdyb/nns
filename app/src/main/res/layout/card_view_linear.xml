<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <FrameLayout
            android:id="@+id/card_frame"
            android:background="@drawable/frame"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/firstTeam"
                        android:layout_height="wrap_content"
                        android:layout_width="50dp"
                        android:text="PHI"
                        android:gravity="center"
                        android:layout_gravity="center|bottom"
                        android:textSize="16dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="vs"
                        android:id="@+id/vsText"
                        android:gravity="center"
                        android:layout_gravity="center|bottom"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/SecondTeam"
                        android:layout_height="wrap_content"
                        android:layout_width="50dp"
                        android:text="MIA"
                        android:gravity="center"
                        android:layout_gravity="center|bottom"
                        android:textSize="16dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/homeText"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:gravity="top|center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="8sp"
                        android:layout_below="@+id/firstTeam"
                        android:layout_alignLeft="@+id/firstTeam"
                        android:layout_alignStart="@+id/firstTeam" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="vs"
                        android:gravity="center"
                        android:layout_gravity="center|bottom"
                        android:textColor="@color/cardview_light_background" />

                    <TextView
                        android:id="@+id/awayText"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="Away"
                        android:gravity="top|center"
                        android:textColor="@color/red"
                        android:textSize="8sp"
                        android:layout_below="@+id/SecondTeam"
                        android:layout_alignLeft="@+id/SecondTeam"
                        android:layout_alignStart="@+id/SecondTeam" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button"
                        android:layout_marginBottom="1dp"
                        android:layout_toStartOf="@id/button2"
                        android:layout_toLeftOf="@id/button2"
                        android:background="@drawable/my_button"
                        android:text="Q1"
                        android:textColor="@color/cardview_light_background" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button2"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/my_button"
                        android:text="Q2"
                        android:textColor="@color/cardview_light_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button3"

                        android:layout_below="@+id/button"
                        android:layout_toLeftOf="@id/button4"
                        android:text="Q3"
                        android:textColor="@color/cardview_light_background"
                        android:background="@drawable/my_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/button4"

                        android:layout_alignBaseline="@+id/button3"
                        android:layout_alignBottom="@+id/button3"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="1dp"
                        android:text="Q4"
                        android:textColor="@color/cardview_light_background"
                        android:background="@drawable/my_button" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>